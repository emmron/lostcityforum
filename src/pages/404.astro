---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Page Not Found">
  <div class="error-page">
    <div class="error-content">
      <div class="error-icon">
        <span class="error-code">404</span>
      </div>
      <h1>Page Not Found</h1>
      <p class="error-message">
        Oops! The page you're looking for seems to have wandered into the Lost City...
      </p>
      <p class="error-description">
        The page may have been moved, deleted, or never existed in the first place.
      </p>
      <div class="error-actions">
        <a href="/" class="btn btn-primary">Return to Home</a>
        <a href="/forums" class="btn">Browse Forums</a>
        <a href="/search" class="btn">Search</a>
      </div>
    </div>

    <div class="helpful-links">
      <h3>Helpful Links</h3>
      <ul>
        <li><a href="/">Home Page</a> - Return to the main forum page</li>
        <li><a href="/forums">Forums</a> - Browse all forum categories</li>
        <li><a href="/search">Search</a> - Search for topics and posts</li>
        <li><a href="/members">Members</a> - View forum members</li>
      </ul>
    </div>
  </div>

  <style>
    .error-page {
      max-width: 600px;
      margin: 40px auto;
      text-align: center;
    }

    .error-content {
      background-color: var(--forum-topic-bg);
      padding: 40px;
      border: 1px solid var(--border-color);
      border-radius: 5px;
      margin-bottom: 20px;
    }

    .error-icon {
      margin-bottom: 20px;
    }

    .error-code {
      font-size: 80px;
      font-weight: bold;
      color: var(--primary-color);
      text-shadow: 2px 2px 0 var(--secondary-color);
    }

    .error-content h1 {
      color: var(--secondary-color);
      margin-bottom: 15px;
      font-size: 28px;
    }

    .error-message {
      font-size: 18px;
      color: var(--text-color);
      margin-bottom: 10px;
    }

    .error-description {
      color: var(--text-muted);
      margin-bottom: 30px;
    }

    .error-actions {
      display: flex;
      gap: 10px;
      justify-content: center;
      flex-wrap: wrap;
    }

    .helpful-links {
      background-color: var(--forum-topic-alt);
      padding: 20px;
      border: 1px solid var(--border-color);
      border-radius: 5px;
      text-align: left;
    }

    .helpful-links h3 {
      color: var(--secondary-color);
      margin-bottom: 15px;
      font-size: 16px;
    }

    .helpful-links ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .helpful-links li {
      padding: 8px 0;
      border-bottom: 1px solid var(--border-color);
    }

    .helpful-links li:last-child {
      border-bottom: none;
    }

    .helpful-links a {
      color: var(--link-color);
      text-decoration: none;
      font-weight: bold;
    }

    .helpful-links a:hover {
      text-decoration: underline;
    }

    @media (max-width: 600px) {
      .error-code {
        font-size: 60px;
      }

      .error-content {
        padding: 20px;
      }

      .error-actions {
        flex-direction: column;
      }

      .error-actions .btn {
        width: 100%;
      }
    }
  </style>
</MainLayout>
