---
import MainLayout from "../layouts/MainLayout.astro";
import "../styles/auth.css";

// This is a placeholder page since email functionality is not implemented
// In a production environment, this would send a password reset email
---

<MainLayout title="Forgot Password">
  <div class="breadcrumbs">
    <a href="/">Home</a> &raquo;
    <a href="/login">Login</a> &raquo;
    Forgot Password
  </div>

  <div class="auth-form-container">
    <h1>Forgot Your Password?</h1>

    <div class="info-box">
      <h3>Password Recovery</h3>
      <p>
        If you've forgotten your password, please contact a forum administrator
        to have your password reset.
      </p>
      <p>
        You can reach out to the admin team through the following methods:
      </p>
      <ul>
        <li>Create a new account and send a private message to <strong>Admin</strong></li>
        <li>Visit our community Discord server</li>
        <li>Email: admin@2004scape.org (if available)</li>
      </ul>
    </div>

    <div class="security-tips">
      <h3>Security Tips</h3>
      <ul>
        <li>Use a unique password for this forum</li>
        <li>Make sure your password is at least 6 characters long</li>
        <li>Consider using a password manager</li>
        <li>Never share your password with anyone</li>
      </ul>
    </div>

    <div class="action-links">
      <a href="/login" class="btn btn-primary">Back to Login</a>
      <a href="/register" class="btn">Create New Account</a>
    </div>
  </div>

  <style>
    .info-box, .security-tips {
      background-color: var(--forum-topic-bg);
      padding: 20px;
      border: 1px solid var(--border-color);
      border-radius: 5px;
      margin-bottom: 20px;
    }

    .info-box h3, .security-tips h3 {
      color: var(--secondary-color);
      margin-bottom: 15px;
      font-size: 16px;
    }

    .info-box p {
      margin-bottom: 10px;
      line-height: 1.6;
    }

    .info-box ul, .security-tips ul {
      margin: 10px 0;
      padding-left: 20px;
    }

    .info-box li, .security-tips li {
      margin-bottom: 8px;
      line-height: 1.5;
    }

    .security-tips {
      background-color: var(--forum-topic-alt);
    }

    .action-links {
      display: flex;
      gap: 10px;
      justify-content: center;
    }
  </style>
</MainLayout>
