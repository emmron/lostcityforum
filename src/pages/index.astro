<MainLayout title="Home">
  <section class="welcome-banner">
    <h2>Welcome to the 2004scape Lost City Forum</h2>
    <p>Join our community dedicated to the 2004 era of the Lost City quest and experience!</p>
  </section>

  <!-- Forum Statistics Summary -->
  <section class="forum-stats-summary">
    <div class="stat-box">
      <div class="stat-number">8</div>
      <div class="stat-label">Forums</div>
    </div>
    <div class="stat-box">
      <div class="stat-number">253</div>
      <div class="stat-label">Topics</div>
    </div>
    <div class="stat-box">
      <div class="stat-number">1,288</div>
      <div class="stat-label">Posts</div>
    </div>
    <div class="stat-box">
      <div class="stat-number">756</div>
      <div class="stat-label">Members</div>
    </div>
    <div class="stat-box">
      <div class="stat-number">42</div>
      <div class="stat-label">Online</div>
    </div>
  </section>

  <!-- Forum Categories and Forums -->
  <section class="forum-categories">
    {
      categories.map((category) => (
        <div class="category">
          <div class="category-header">{category.name}</div>
          <ul class="forum-list">
            {category.forums.map((forum) => (
              <li class="forum-item">
                <div class="forum-details">
                  <h3><a href={`/forums/${forum.id}`}>{forum.title}</a></h3>
                  <p>{forum.description}</p>
                </div>
                <div class="forum-stats">
                  <div>Topics: {forum.topics}</div>
                  <div>Posts: {forum.posts}</div>
                </div>
                <div class="forum-last-post">
                  <div>{forum.lastPost.title}</div>
                  <div>by {forum.lastPost.author}</div>
                  <div>{forum.lastPost.date}</div>
                </div>
              </li>
            ))}
          </ul>
        </div>
      ))
    }
  </section>

  <!-- Recent Topics -->
  <section class="recent-topics">
    <h2>Recent Topics</h2>
    <table class="topics-list">
      <thead>
        <tr>
          <th>Topic</th>
          <th>Author</th>
          <th>Replies</th>
          <th>Views</th>
          <th>Last Post</th>
        </tr>
      </thead>
      <tbody>
        {
          recentTopics.map((topic) => (
            <tr>
              <td class="topic-title">
                <a href={`/topics/${topic.id}`}>{topic.title}</a>
              </td>
              <td>{topic.author}</td>
              <td>{topic.replies}</td>
              <td>{topic.views}</td>
              <td>{topic.lastPost}</td>
            </tr>
          ))
        }
      </tbody>
    </table>
  </section>

  <style>
    .welcome-banner {
      background-color: var(--forum-category-bg);
      padding: 20px;
      margin-bottom: 20px;
      border: 1px solid var(--border-color);
      text-align: center;
    }

    .welcome-banner h2 {
      color: var(--secondary-color);
      margin-bottom: 10px;
    }

    .forum-stats-summary {
      display: flex;
      justify-content: space-between;
      margin-bottom: 20px;
      gap: 10px;
    }

    .stat-box {
      flex: 1;
      background-color: var(--forum-category-bg);
      border: 1px solid var(--border-color);
      padding: 15px;
      text-align: center;
    }

    .stat-number {
      font-size: 24px;
      font-weight: bold;
      color: var(--link-color);
      margin-bottom: 5px;
    }

    .stat-label {
      font-size: 14px;
    }

    .recent-topics h2 {
      margin: 30px 0 15px;
      color: var(--secondary-color);
    }

    @media (max-width: 768px) {
      .forum-stats-summary {
        flex-wrap: wrap;
      }

      .stat-box {
        flex-basis: calc(50% - 10px);
      }
    }
  </style>
</MainLayout>
