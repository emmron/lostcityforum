---
import MainLayout from "../layouts/MainLayout.astro";
import { db } from "../lib/db.js";

// Fetch categories with forums from the database
const categories = await db.category.getAll();

// Calculate total stats
let totalTopics = 0;
let totalPosts = 0;
let totalForums = 0;

// Process categories to calculate totals
categories.forEach(category => {
  totalForums += category.forums.length;
  category.forums.forEach(forum => {
    totalTopics += forum.topicsCount || 0;
    totalPosts += forum.postsCount || 0;
  });
});

// In the future, could add a function to get latest topics across all forums
const recentTopics = [];
---

<MainLayout title="Home">
  <section class="welcome-banner">
    <h2>Welcome to the 2004scape Lost City Forum</h2>
    <p>Join our community dedicated to the 2004 era of the Lost City quest and experience!</p>
  </section>

  <!-- Forum Statistics Summary -->
  <section class="forum-stats-summary">
    <div class="stat-box">
      <div class="stat-number">{totalForums}</div>
      <div class="stat-label">Forums</div>
    </div>
    <div class="stat-box">
      <div class="stat-number">{totalTopics}</div>
      <div class="stat-label">Topics</div>
    </div>
    <div class="stat-box">
      <div class="stat-number">{totalPosts}</div>
      <div class="stat-label">Posts</div>
    </div>
    <div class="stat-box">
      <div class="stat-number">0</div>
      <div class="stat-label">Members</div>
    </div>
    <div class="stat-box">
      <div class="stat-number">1</div>
      <div class="stat-label">Online</div>
    </div>
  </section>

  <!-- Forum Categories and Forums -->
  <section class="forum-categories">
    {
      categories.map((category) => (
        <div class="category">
          <div class="category-header">{category.name}</div>
          <ul class="forum-list">
            {category.forums.map((forum) => (
              <li class="forum-item">
                <div class="forum-details">
                  <h3><a href={`/forums/${forum.id}`}>{forum.title}</a></h3>
                  <p>{forum.description}</p>
                </div>
                <div class="forum-stats">
                  <div>Topics: {forum.topicsCount || 0}</div>
                  <div>Posts: {forum.postsCount || 0}</div>
                </div>
                <div class="forum-last-post">
                  <div>No posts yet</div>
                </div>
              </li>
            ))}
          </ul>
        </div>
      ))
    }
  </section>

  <!-- Recent Topics -->
  {recentTopics.length > 0 ? (
    <section class="recent-topics">
      <h2>Recent Topics</h2>
      <table class="topics-list">
        <thead>
          <tr>
            <th>Topic</th>
            <th>Author</th>
            <th>Replies</th>
            <th>Views</th>
            <th>Last Post</th>
          </tr>
        </thead>
        <tbody>
          {
            recentTopics.map((topic) => (
              <tr>
                <td class="topic-title">
                  <a href={`/topics/${topic.id}`}>{topic.title}</a>
                </td>
                <td>{topic.author.username}</td>
                <td>{topic.posts ? topic.posts.length - 1 : 0}</td>
                <td>{topic.views}</td>
                <td>{topic.updatedAt ? new Date(topic.updatedAt).toLocaleString() : ''}</td>
              </tr>
            ))
          }
        </tbody>
      </table>
    </section>
  ) : (
    <section class="recent-topics">
      <h2>Recent Topics</h2>
      <div class="no-topics">
        <p>No topics have been created yet.</p>
        <p>
          <a href="/forums" class="btn">Visit Forums</a>
        </p>
      </div>
    </section>
  )}

  <style>
    .welcome-banner {
      background-color: var(--forum-category-bg);
      padding: 20px;
      margin-bottom: 20px;
      border: 1px solid var(--border-color);
      text-align: center;
    }

    .welcome-banner h2 {
      color: var(--secondary-color);
      margin-bottom: 10px;
    }

    .forum-stats-summary {
      display: flex;
      justify-content: space-between;
      margin-bottom: 20px;
      gap: 10px;
    }

    .stat-box {
      flex: 1;
      background-color: var(--forum-category-bg);
      border: 1px solid var(--border-color);
      padding: 15px;
      text-align: center;
    }

    .stat-number {
      font-size: 24px;
      font-weight: bold;
      color: var(--link-color);
      margin-bottom: 5px;
    }

    .stat-label {
      font-size: 14px;
    }

    .recent-topics h2 {
      margin: 30px 0 15px;
      color: var(--secondary-color);
    }

    @media (max-width: 768px) {
      .forum-stats-summary {
        flex-wrap: wrap;
      }

      .stat-box {
        flex-basis: calc(50% - 10px);
      }
    }
  </style>
</MainLayout>
