// Import any assets you need
---

<div class="welcome-banner">
	<div class="welcome-content">
		<div class="welcome-header">
			<h2>Welcome to the Lost City Forum</h2>
			<p class="welcome-subtitle">The premier community for 2004scape Lost City fans</p>
		</div>

		<div class="forum-stats">
			<div class="stat-item">
				<div class="stat-value">1,254</div>
				<div class="stat-label">Members</div>
			</div>
			<div class="stat-item">
				<div class="stat-value">8,721</div>
				<div class="stat-label">Topics</div>
			</div>
			<div class="stat-item">
				<div class="stat-value">42,165</div>
				<div class="stat-label">Posts</div>
			</div>
		</div>

		<div class="welcome-actions">
			<a href="/forums" class="btn btn-primary">Browse Forums</a>
			<a href="/register" class="btn btn-secondary">Join Community</a>
		</div>
	</div>

	<div class="announcement-box">
		<div class="announcement-icon">
			<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path><line x1="12" y1="9" x2="12" y2="13"></line><line x1="12" y1="17" x2="12.01" y2="17"></line></svg>
		</div>
		<div class="announcement-content">
			<h3>Upcoming Event</h3>
			<p>Join us for the Lost City Anniversary Celebration on June 15th! Special giveaways and exclusive forum badges available.</p>
			<a href="/events" class="announcement-link">Learn More</a>
		</div>
	</div>
</div>

<style>
	.welcome-banner {
		background: linear-gradient(135deg, var(--primary-color-light) 0%, var(--primary-color) 100%);
		border-radius: var(--border-radius-lg);
		padding: 2rem;
		margin-bottom: 2rem;
		box-shadow: var(--shadow-lg);
		position: relative;
		overflow: hidden;
	}

	.welcome-banner::before {
		content: "";
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-image: url('/images/background.jpg');
		background-size: cover;
		background-position: center;
		opacity: 0.15;
		z-index: 0;
	}

	.welcome-content {
		position: relative;
		z-index: 1;
		color: white;
		text-align: center;
	}

	.welcome-header {
		margin-bottom: 1.5rem;
	}

	.welcome-header h2 {
		font-size: 2rem;
		margin: 0;
		text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
		color: var(--secondary-color);
	}

	.welcome-subtitle {
		font-size: 1.1rem;
		margin-top: 0.5rem;
		opacity: 0.9;
	}

	.forum-stats {
		display: flex;
		justify-content: center;
		gap: 3rem;
		margin: 2rem 0;
	}

	.stat-item {
		text-align: center;
	}

	.stat-value {
		font-size: 2.2rem;
		font-weight: 700;
		color: var(--secondary-color);
		line-height: 1;
		text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
	}

	.stat-label {
		font-size: 0.9rem;
		text-transform: uppercase;
		letter-spacing: 1px;
		margin-top: 0.5rem;
		opacity: 0.8;
	}

	.welcome-actions {
		display: flex;
		justify-content: center;
		gap: 1rem;
		margin-top: 2rem;
	}

	.welcome-actions .btn {
		padding: 0.8rem 1.5rem;
		font-weight: 500;
		font-size: 1rem;
		transition: all 0.3s ease;
	}

	.welcome-actions .btn:hover {
		transform: translateY(-3px);
		box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
	}

	.announcement-box {
		background-color: rgba(255, 255, 255, 0.1);
		backdrop-filter: blur(10px);
		border-radius: var(--border-radius-md);
		padding: 1.5rem;
		margin-top: 2rem;
		display: flex;
		align-items: flex-start;
		gap: 1rem;
		border-left: 4px solid var(--secondary-color);
		box-shadow: var(--shadow-md);
	}

	.announcement-icon {
		color: var(--secondary-color);
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 0.5rem;
		border-radius: 50%;
		background-color: rgba(201, 170, 113, 0.1);
	}

	.announcement-content h3 {
		color: var(--secondary-color);
		margin: 0 0 0.5rem 0;
		font-size: 1.2rem;
	}

	.announcement-content p {
		color: rgba(255, 255, 255, 0.9);
		margin-bottom: 0.75rem;
		font-size: 0.95rem;
		line-height: 1.5;
	}

	.announcement-link {
		color: var(--secondary-color);
		text-decoration: none;
		font-weight: 500;
		font-size: 0.9rem;
		transition: color 0.2s ease;
		display: inline-flex;
		align-items: center;
	}

	.announcement-link:hover {
		color: white;
		text-decoration: underline;
	}

	@media (max-width: 768px) {
		.welcome-banner {
			padding: 1.5rem;
		}

		.welcome-header h2 {
			font-size: 1.5rem;
		}

		.welcome-subtitle {
			font-size: 1rem;
		}

		.forum-stats {
			gap: 1.5rem;
			flex-wrap: wrap;
		}

		.stat-value {
			font-size: 1.8rem;
		}

		.announcement-box {
			flex-direction: column;
			align-items: center;
			text-align: center;
		}

		.welcome-actions {
			flex-direction: column;
			gap: 0.75rem;
		}

		.welcome-actions .btn {
			width: 100%;
		}
	}

	@media (max-width: 480px) {
		.forum-stats {
			flex-direction: column;
			gap: 1rem;
		}
	}
</style>
