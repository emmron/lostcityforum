    color: var(--primary-color);
  }

  .user-controls {
    display: flex;
    align-items: center;
  }

  .logged-in-controls {
    display: flex;
    align-items: center;
    gap: 15px;
  }

  .logged-in-controls span {
    color: var(--text-color);
  }

  .logged-in-controls a {
    color: var(--link-color);
    text-decoration: none;
  }

  .logged-in-controls a:hover {
    text-decoration: underline;
  }

  .username {
    font-weight: bold;
  }

  .btn-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background-color: var(--secondary-bg);
    transition: background-color 0.2s ease;
  }

  .btn-icon:hover {
    background-color: var(--primary-color-light);
  }

  .login-controls {
    display: flex;
    gap: 10px;
  }

  .main-nav ul {
    display: flex;
    list-style: none;
    padding: 0;
    margin: 0;
    background-color: var(--secondary-bg);
    border-radius: 4px;
  }

  .main-nav li {
    padding: 0;
    margin: 0;
  }

  .main-nav li.active {
    background-color: var(--primary-color);
  }

  .main-nav li.active a {
    color: white;
  }

  .main-nav a {
    display: block;
    padding: 0.8rem 1.2rem;
    color: var(--text-color);
    text-decoration: none;
    transition: background-color 0.2s ease;
  }

  .main-nav a:hover {
    background-color: var(--primary-color-light);
    color: white;
  }

  .main-footer {
    margin-top: 2rem;
    padding: 1.5rem 0;
    background-color: var(--secondary-bg);
    border-top: 1px solid var(--border-color);
  }

  .footer-content {
    text-align: center;
  }

  .footer-links {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 1.5rem;
    margin-bottom: 1rem;
  }

  .footer-links a {
    color: var(--link-color);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .footer-links a:hover {
    color: var(--primary-color);
    text-decoration: underline;
  }

  .copyright {
    margin: 0;
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  @media (max-width: 768px) {
    .header-top {
      flex-direction: column;
      gap: 1rem;
    }

    .main-nav ul {
      flex-wrap: wrap;
    }

    .main-nav li {
      flex: 1 1 auto;
      text-align: center;
    }

    .logged-in-controls {
      flex-wrap: wrap;
      justify-content: center;
    }
  }
</style>